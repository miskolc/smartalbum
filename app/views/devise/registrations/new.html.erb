<%= render 'devise/shared/header' %>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>
    <fieldset>
    <div class="form-group">  
      <%= f.label :email, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder: "Email", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
      <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Password", autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
      <%= f.password_field :password_confirmation, class: "form-control", id: "confirmationPassword", placeholder: "Password Confirmation", autocomplete: "off" %>
      </div>
    </div>

    <div><%= f.submit "Sign up", class: "btn btn-primary" %></div>

  </fieldset>
<% end %>

<%= render "devise/shared/links" %>

<%= render "devise/shared/footer" %>
