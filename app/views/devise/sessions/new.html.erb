<%= render 'devise/shared/header' %>

<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :email, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder: "Email", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Password", autocomplete: "off" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in", class: "btn btn-primary" %></div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>

<%= render 'devise/shared/footer' %>